@using Microsoft.AspNetCore.Http;


@model Assignment1.Models.BlogPost
@{
    Layout = "_Layout";
}


<form asp-controller="Home" asp-action="AddBlogPost">
    <!--<input type="hidden" value="Convert.ToInt16(Context.Session.GetString("UserId"));" asp-for="UserId" />-->
    <fieldset>
        <Legend>Add a BlogPost</Legend>

        <div class="form-group">
            <label>Title:</label>
            <textarea asp-for="Title" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label>Content:</label>
            <textarea asp-for="Content" raws="5" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label>Posted Date:</label>
            <textarea asp-for="Posted" class="form-control"></textarea>
        </div>
        <br />
        <br />
        <input type="submit" value="Post" />
    </fieldset>
</form>

