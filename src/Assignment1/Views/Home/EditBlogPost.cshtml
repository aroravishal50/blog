@using Microsoft.AspNetCore.Http;


@model Assignment1.Models.BlogPost
@{
    ViewBag.Title = "Post";
    Layout = "_Layout";
}


<form asp-controller="Home" asp-action="EditBlogPost">
    <!--<input type="hidden" value="Convert.ToInt16(Context.Session.GetString("UserId"));" asp-for="UserId" />-->
    <fieldset>
        <Legend>Edit a BlogPost</Legend>

        <div class="form-group">
            <label>Title:</label>
            <textarea asp-for="Title" value="" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label>Content:</label>
            <textarea asp-for="Content" value="" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label>Posted Date:</label>
            <textarea asp-for="Posted" value="" class="form-control"></textarea>
        </div>
        <br />
        <br />
        <input type="submit" value="Post" />
    </fieldset>
</form>

